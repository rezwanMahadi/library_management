generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  name         String?
  email        String  @unique
  phone        String?
  password     String?
  role         String?
  universityId String @unique

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @default(now())
  orderedBooks OrderedBook[]
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  bookId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  availableBooks AvailableBook[]
  orderedBooks   OrderedBook[]
}

model AvailableBook {
  id     Int @id @default(autoincrement())
  bookId String @unique
  book   Book @relation(fields: [bookId], references: [bookId])
}

model OrderedBook {
  id     Int @id @default(autoincrement())
  bookId String @unique
  universityId String @unique
  book   Book @relation(fields: [bookId], references: [bookId])
  user   User @relation(fields: [universityId], references: [universityId])
}

model TempTag {
  id   Int    @id @default(autoincrement())
  tag  String @unique
  type String @unique @default("tempTag")
}
